<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<!-- 配置实体类和表的关系 -->
	<!-- 通过dynamic-update将当前对象设置为动态更新，
		 对象中没有发生变化的属性将不会拼入update语句 -->
	<class name="com.kelvin.entity.Cost" table="cost" dynamic-update="true">
		
		<!-- 配置主键属性和字段的关系 -->
		<id	name="id" type="integer" column="id">
			<!-- 用来指明主键的生成方式  --> 
			
			<!-- 适用ORACLE，指定用于生成主键的sequence -->
			<!--<generator class="sequence">
				<param name="sequence">cost_seq</param>
			</generator>-->
			
			<!-- 适用MySQL，采用数据库提供的主键生成机制生成主键 -->
			<generator class="identity"></generator>
		</id>
		
		<!-- 配置实体类中属性与表中字段的关系 -->
		<property name="name" type="string" column="name"></property>
		<property name="baseDuration" type="integer" column="base_duration"></property>
		<property name="baseCost" type="double" column="base_cost"></property>
		<property name="unitCost" type="double" column="unit_cost"></property>
		<property name="status" type="string" column="status"></property>
		<property name="descr" type="string" column="descr"></property>
		<property name="createDate" type="date" column="create_date"></property>
		<property name="startDate" type="date" column="start_date"></property>
		<property name="costType" type="string" column="cost_type"></property>
		
	</class>

</hibernate-mapping>